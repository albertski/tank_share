<div class="mt-8"  data-controller="slideshow">
  <div class="relative w-full overflow-hidden rounded-lg shadow-lg">
    <div id="slideshow" class="flex transition-transform duration-700 ease-in-out"  style="transform: translateX(0);" data-slideshow-target="slideshow">
      <% tank.images.each do |image| %>
        <%= image_tag url_for(image), class: "w-full object-cover h-48 md:h-64 flex-shrink-0 flex-grow-0", data: { action: "click->slideshow#showImage" , url_value: url_for(image) } %>
      <% end %>
    </div>

    <button id="prev" data-action="slideshow#prev" class="absolute left-2 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 text-gray-800 font-bold py-2 px-4 rounded-full focus:outline-none">
      &larr;
    </button>
    <button id="next" data-action="slideshow#next" class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 text-gray-800 font-bold py-2 px-4 rounded-full focus:outline-none">
      &rarr;
    </button>
  </div>

  <div id="image-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-75 hidden" data-slideshow-target="modal">
    <img src="" alt="Full Image" class="max-w-full max-h-full" data-slideshow-target="modalImage">
    <button class="absolute top-4 right-4 text-white text-3xl font-bold" data-action="click->slideshow#closeModal">&times;</button>
  </div>
</div>

<%= render 'shared/modal/image' %>
