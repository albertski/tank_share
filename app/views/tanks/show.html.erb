<div class="container mx-auto p-4">

  <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-4">
    <div class="flex-shrink-0">
      <div class="w-24 h-24 md:w-32 md:h-32 rounded-full overflow-hidden border border-gray-300">
        <%= image_tag("https://via.placeholder.com/150", alt: "Profile Image", class: "object-cover w-full h-full") %>
      </div>
    </div>

    <div class="mt-4 md:mt-0 text-center md:text-left">
      <h1 class="text-xl md:text-2xl font-semibold text-gray-800"><%= @tank.user.first_name %></h1>

      <div class="mt-2 inline-block px-2 py-1 text-xs md:text-sm font-medium text-white rounded bg-blue-500">
        <%= @tank.user.level %>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <div class="relative w-full overflow-hidden rounded-lg shadow-lg">
      <div id="slideshow" class="flex transition-transform duration-700 ease-in-out" style="transform: translateX(0);">
        <% @tank.images.each do |image| %>
          <%= image_tag url_for(image), class: "w-full object-cover h-48 md:h-64" %>
        <% end %>
      </div>

      <button id="prev" class="absolute left-2 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 text-gray-800 font-bold py-2 px-4 rounded-full focus:outline-none">
        &larr;
      </button>
      <button id="next" class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-50 hover:bg-opacity-75 text-gray-800 font-bold py-2 px-4 rounded-full focus:outline-none">
        &rarr;
      </button>
    </div>
  </div>
</div>
