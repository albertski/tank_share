<div class="container mx-auto p-4">
  <h1 class="text-4xl font-semibold leading-7 text-gray-900 mb-3">Edit Tank Information</h1>
  <%= render partial: 'form', locals: { tank: @tank } %>

  <% if @tank.persisted? %>
    <div class="py-4"><%= link_to 'Add Livestock', tank_livestocks_path(@tank), class: 'block w-full bg-gray-300 text-black px-4 py-2 rounded-lg hover:bg-gray-200' %></div>
    <div class="py-4"><%= link_to 'Add Equipment', tank_equipments_path(@tank), class: 'block w-full bg-gray-300 text-black px-4 py-2 rounded-lg hover:bg-gray-200' %></div>
    <div class="py-4"><%= link_to 'Add Parameters', tank_parameters_path(@tank), class: 'block w-full bg-gray-300 text-black px-4 py-2 rounded-lg hover:bg-gray-200' %></div>
  <% end %>
</div>
