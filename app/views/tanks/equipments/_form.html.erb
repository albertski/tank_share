<%= form_with(
      model: equipment,
      url: equipment.persisted? ? send("tank_#{equipment.equipmentable_type.demodulize.underscore}_path", equipment.tank, equipment) : send("tank_#{equipment.equipmentable_type.demodulize.pluralize.underscore}_path", equipment.tank, equipment),
      local: true,
      html: { class: 'space-y-6 p-4 bg-white rounded-lg shadow-md equipment-form mb-5' }
    ) do |f| %>
  <% if equipment.errors.any? %>
    <div class="p-3 mb-4 text-red-700 bg-red-100 border border-red-300 rounded-md">
      <%= equipment.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div>
    <%= f.label :manufacturer, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :manufacturer, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :model, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :model, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :quantity, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :quantity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :image, class: "block text-sm font-medium text-gray-700" %>
    <%= f.file_field :image, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
  </div>

  <div>
    <%= f.submit "Save Equipment", class: "inline-flex justify-center items-center w-full px-20 py-2 text-xl font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-700 hover:from-blue-500 hover:to-indigo-700 sm:mb-0 sm:w-auto hover:bg-indigo-600 sm:rounded-full" %>
  </div>
<% end %>
