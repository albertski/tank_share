<%= turbo_frame_tag equipment.turbo_frame_tag do %>
  <div class="flex p-4 border rounded-lg shadow-sm bg-white">
    <div class="w-40 h-40 mr-4">
      <% if equipment.image.attached? %>
        <%= image_tag equipment.image, class: "object-cover w-full h-full rounded-md border rounded-lg shadow-sm" %>
      <% else %>
        <div class="object-cover w-full h-full rounded-md bg-gray-200"></div>
      <% end %>
    </div>

    <div class="flex flex-col">
      <div class="px-3 py-1 text-xs font-semibold text-blue-600 border border-2 border-blue-600 rounded-full inline-block text-center mb-2">
        <%= equipment.manufacturer %>
      </div>

      <div class="text-lg font-semibold text-gray-800 mb-2">
        <%= equipment.title %>
      </div>
      <div class="text-sm text-gray-500">
        Model: <%= equipment.model %>
      </div>
      <div class="text-sm text-gray-500">
        Quantity: <%= equipment.quantity %>
      </div>
    </div>

    <div>
      <div class="quote__actions">
        <% if include_manage_buttons %>
          <%= button_to "Delete", send("tank_#{equipment.equipmentable_type.demodulize.underscore}_path", equipment.tank, equipment), method: :delete, class: "btn btn--light" %>
          <%= link_to "Edit", send("edit_tank_#{equipment.equipmentable_type.demodulize.underscore}_path", equipment.tank, equipment), class: "btn btn--light" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
