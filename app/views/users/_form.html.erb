 <%= form_for current_user, method: :put, html: { class: "space-y-4 md:space-y-6" } do |f| %>
   <% User::COMPLETABLE_ATTRIBUTES.each do |column| %>
    <%= render "users/profile/#{column}", f: f %>
   <% end %>

  <% if current_user.avatar %>
    <div class="relative">
      <%= image_tag current_user.avatar.variant(resize_to_limit: [150, 150]).processed, class: " rounded-lg shadow-md" %>
    </div>
  <% end %>
  <%= f.submit 'Save', class: "inline-flex justify-center items-center w-full px-20 py-2 text-xl font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-700 hover:from-blue-500 hover:to-indigo-700 sm:mb-0 sm:w-auto hover:bg-indigo-600 sm:rounded-full" %>
<% end %>
