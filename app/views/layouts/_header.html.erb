<header class="bg-white py-5 shadow-md">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <%= image_tag 'logos/tank_share_small.png', alt: 'Tank Share', class: 'max-w-xs' %>

    <div class="relative" data-controller="menu">
      <button data-action="click->menu#toggle" class="flex flex-col items-center text-gray-500 hover:text-gray-700 focus:outline-none">
        <div class="w-6 h-1 bg-gray-500 mb-1 transition-all duration-300"></div>
        <div class="w-6 h-1 bg-gray-500 mb-1 transition-all duration-300"></div>
        <div class="w-6 h-1 bg-gray-500 mb-1 transition-all duration-300"></div>
        <span class="text-sm mt-2">Menu</span>
      </button>
      <nav data-menu-target="menu" class="hidden absolute right-0 top-full mt-2 w-48 bg-white shadow-md rounded-md">
        <a href="/" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900">Home</a>
        <% if user_signed_in? %>
          <a href="/users/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-gray-900">My Account</a>
        <% end %>
      </nav>
    </div>
  </div>
</header>
