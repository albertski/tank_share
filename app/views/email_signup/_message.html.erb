<div id="message">
  <% if flash[:notice].present? %>
    <%= turbo_stream.append 'message' do %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <% elsif flash[:alert].present? %>
    <%= turbo_stream.append 'message' do %>
      <div class="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
  <% end %>
</div>
